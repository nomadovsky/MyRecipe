
<div class="container p-3">
    <div class="row pt-4 pb-4">
        <div class="col-md-6">
            <h2>Recipes panel</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Recipe" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Create new recipe
            </a>
        </div>
    </div>
    <table width="100%" id="recipeTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>User</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{
    <script src="~/js/recipe.js"></script>
}