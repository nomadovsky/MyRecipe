@model MyRecipe.Models.ViewModels.RecipeVM


<input hidden asp-for="Recipe.Id" />
<div class="card container mt-4">
    <div class="card-header text-bg-dark ml-0 row ">
        <div class="col-12 col-md-6">
            <h1 class="text-white-50">@Model.Recipe.Title</h1>
            <p class="text-warning">by @Model.Recipe.ApplicationUser</p>
        </div>
        <div class="col-12 col-md-6 text-end pt-4">
            <span class="badge bg-warning pt-2" style="height:30px;">@Model.Recipe.Difficulty.Name</span>
            <span class="badge bg-light pt-2" style="height:30px;">@Model.Recipe.Category.Name</span>
        </div>
    </div>
    <div class="card-body row container">
        <div class="container rounded p-2">
            <div class="row">
                <div class="col-8">

                    <div class="row pl-2">
                        <p class="text-secondary">@Html.Raw(Model.Recipe.Description)</p>
                    </div>
                </div>
                <div class="col-12 col-lg-3 offset-lg-1 text-center">
                    <img src="@Model.Recipe.ImageUrl" width="100%" class="rounded" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-bg-dark">
        <div class="row">
            <div class="col-12 col-md-6 pb-1  mx-auto">
                <a class="btn btn-success form-control " asp-action="Index">Back to Home</a>
            </div>

    </div>
</div>