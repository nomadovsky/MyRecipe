@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
        <div class="row pt-4">
            <div class="col-md-6">
                <h2>Categories</h2>
            </div>
            <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Add Category
            </a>
            </div>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td width="20%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" 
                            class="btn btn-primary mx-2" 
                            style="border-top-right-radius: 5px; border-bottom-right-radius: 5px;">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form asp-controller="Category" asp-action="Delete" method="post" onclick="return confirm('Are you sure you want to delete this?')">
                            <input type="hidden" name="Id" value="@obj.Id" />
                            <button type="submit" class="btn btn-outline-danger mx-2"
                                data-confirm="Are you sure you want to delete this category?">
                                <i class="bi bi-x-lg"></i>
                                Delete
                            </button>
                        </form>
                        
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>